            <TableColumn fx:id="colDuracion" prefWidth="100" text="Duración" />
            <TableColumn fx:id="colServicio" prefWidth="130" text="Servicio" />
            <TableColumn fx:id="colDescuento" prefWidth="80" text="Descuento %" />
            <TableColumn fx:id="colMonto" prefWidth="100" text="Monto" />
        </columns>
