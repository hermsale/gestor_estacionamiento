    <!-- Tabla de Facturación -->
    <TableView fx:id="tablaFacturas" prefHeight="500" prefWidth="1241.0" GridPane.columnSpan="2" GridPane.rowIndex="1">

        <columns>
            <TableColumn fx:id="colFechaEmision" prefWidth="120" text="Fecha Emisión" />
